{
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": { 
        "includeFiles": ["static/**", "templates/**"]
      }
    }
  ],
  "functions": {
    "app.py": {
      "includeFiles": "static/**"
    }
  },
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "FLASK_APP": "app.py",
    "FLASK_ENV": "production"
  }
}